@using Webdiyer.WebControls.Mvc;
@using Models;
@model PagedList<Tb_SoftList>
<script src="~/Scripts/select.js"></script>
<script src="~/Scripts/jquery-1.7.1.min.js"></script>
<link href="~/Content/assets/select.css" rel="stylesheet" />


<div id="dvOrders">
    <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example2">
        <thead>
            <tr>
                <th>订单编号</th>
                <th>订单日期</th>
                <th>顾客编号</th>
            </tr>
        </thead>
        <tbody>

            @foreach (Tb_SoftList od in Model)
            {     
                <tr>
                    <td>@od.SoftID</td>
                    <td>@od.SoftName.ToString()</td>
                    <td>@od.SoftType</td>
                </tr>   
            }
        </tbody>
    </table>
    @Html.AjaxPager(Model, new PagerOptions() { PageIndexParameterName = "id", ShowDisabledPagerItems = false, AlwaysShowFirstLastPageNumber = true }, new AjaxOptions { UpdateTargetId = "dvOrders" })
</div>
