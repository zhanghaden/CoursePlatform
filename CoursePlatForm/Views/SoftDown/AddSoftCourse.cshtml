@{
    ViewBag.Title = "AddSoftCourse";
    Layout = "~/Views/Shared/SoftDown_Layout.cshtml";
}
@section  span9{
    @using (Html.BeginForm())
    {
        <div class="span9" id="content">
            <div class="row-fluid">
                <!-- block -->
                <div class="block">
                    <div class="navbar navbar-inner block-header">
                        <div class="muted pull-left">课程设置（目前已经开设的以信息技术、劳动技术的相关课程）（不得多于20门课程）</div>
                    </div>
                    <div class="block-content collapse in">
                        <div class="span12">
                            <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example2">
                                <thead>
                                    <tr>
                                        <th>序号</th>
                                        <th>课程名称</th>
                                        <th>主要软件平台</th>
                                        <th>每学年学生数</th>
                                        @*                                                <th>实际人数</th>
                                                <th>课程状态</th>
                                                 <th>编辑课程</th>
                                                <th>删除课程</th>*@
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr class="odd gradeX">
                                        <td>1</td>
                                        <td>
                                            <input id="CourseName&1" name="CourseName&1" type="text" /></td>
                                        <td class="center">
                                            <input id="SoftPlatform&1" name="SoftPlatform&1" type="text" /></td>
                                        <td class="center">
                                            <input id="StuNum&1" name="StuNum&1" type="text" /></td>
                                        
                                    </tr>
                                    <tr id="CourseSoftBefore"><td colspan="4"><span id="addCourseSoft" class="btn">添加新的课程</span></td></tr>
                                    
                                    
                                </tbody>
                            </table>
                            
                            <input type="submit" class="btn btn-success" value="提交" />

                        </div>
                    </div>
                </div>
                <!-- /block -->
            </div>
        </div>
    }
}
@section booterScript{
    <script src="~/Content/vendors/jquery-1.9.1.js"></script>
    <script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
    @*<script src="~/Content/vendors/datatables/js/jquery.dataTables.min.js"></script>*@
    <script src="~/Content/assets/DT_bootstrap.js"></script>

    <script src="~/Content/assets/scripts.js"></script>

    <script>
        $(function () {
            var Tag = 1;
            $("#addCourseSoft").click(function () {
                Tag++;
                if (Tag <= 20) {
                    $("#CourseSoftBefore").before("<tr class='odd gradeX'><td>" + Tag + "</td><td><input id='CourseName&" + Tag + "' name='CourseName&" + Tag + "' type='text' /></td><td class='center'><input id='SoftPlatform&" + Tag + "' name='SoftPlatform&" + Tag + "' type='text' /></td><td class='center'><input id='StuNum&" + Tag + "' name='StuNum&" + Tag + "' type='text' /></td></tr>");
                }
                else
                    alert("您不得添加多于20门课程！");
            });
        });
    </script>
}


