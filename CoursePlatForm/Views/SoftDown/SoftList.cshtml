        {
                                        <tr class="odd gradeX">
                                            <td>@i</td>
                                            <td>@item.SoftName</td>
                                            <td>@item.SoftIntro</td>
                                            <td class="center">@item.SoftType </td>
                                            <td class="center">@item.Contest</td>
                                            <td>
