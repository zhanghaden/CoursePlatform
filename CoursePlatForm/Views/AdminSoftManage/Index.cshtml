@model IEnumerable<Models.Tb_SoftList>

@{
    ViewBag.Title = "AdminSoftList";
    Layout = "~/Views/Shared/SoftDownAdmin_Layout.cshtml";
}
@section  span9{

    <div class="span9" id="content">
        <div class="row-fluid">
            <!-- block -->
            <div class="block">
                <div class="navbar navbar-inner block-header">
                    <div class="muted pull-left">软件列表页面</div>
                </div>
                <div class="block-content collapse in">
                    <div class="span12">
                        <div class="table-toolbar">
                            <div class="btn-group">
                                <a href="/AdminSoftManage/Create" class="btn btn-success">添加新的软件<i class="icon-plus icon-white"></i></a>
                            </div>
                        </div>
                        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example2">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.SoftName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.SoftIntro)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.SoftType)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Contest)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DownLink)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>


                                @foreach (var item in Model)
                                {
                                    <tr class="odd gradeX">
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SoftName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SoftIntro)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SoftType)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Contest)
                                        </td>
                                        <td>
                                            <a href="@item.DownLink"></a>
                                        </td>
                                        <td>
                                            @Html.ActionLink("编辑", "Edit", new { id = item.SoftID }) |
            @Html.ActionLink("详情", "Details", new { id = item.SoftID }) |
            @Html.ActionLink("删除", "Delete", new { id = item.SoftID })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- /block -->
        </div>
    </div>

}
@section booterScript{

    <script src="~/Content/vendors/jquery-1.9.1.js"></script>
    <script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/vendors/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/assets/DT_bootstrap.js"></script>

    <script src="~/Content/assets/scripts.js"></script>

    <script>
        $(function () {

        });
    </script>
}
